<%= form_for [@post, @comment] do |f| %>
    <% if @comment.errors.any? %>
        <div class="errors">
            <h2><%= pluralize(@comment.errors.count, "error")%> prevented this comment from being saved</h2>
            <ul>
                <% @comment.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <%end%>
    <%= f.label :name %><br />
    <%= f.text_field :name %><br />
    <br />
    <%= label_tag(:body, "Comment") %><br />
    <%= f.text_area :body %><br />
    <br />
    <%= f.submit "Save comment", class: "button blue-hover-button" %>
<%end%>
