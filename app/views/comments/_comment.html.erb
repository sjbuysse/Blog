<div id=<%=dom_id(comment)%> class="clearfix">
    <div class="comment-wrapper">
        <p class="comment-name"><strong><%= comment.name %></strong></p>
        <p class="comment-body"><%= comment.body %></p>
        <p class="comment-date"><%= time_ago_in_words(comment.created_at) %> ago</p>
    </div>
    <% if user_signed_in?%>
    <%= button_to("Delete", post_comment_path(@post, comment), method: :delete, class:"delete-comment", data: {confirm: "Are you sure you want to delete this comment?"}) %>
    <%end%>
</div>
