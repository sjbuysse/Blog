<div id=<%=dom_id(comment)%> class="group">
    <div class="comment_wrapper">
        <p class="comment_name"><strong><%= comment.name %></strong></p>
        <p class="comment_body"><%= comment.body %></p>
        <p class="comment_date"><%= time_ago_in_words(comment.created_at) %> ago</p>
    </div>
    <%= button_to("Delete", post_comment_path(@post, comment), method: :delete, class:"delete-comment", data: {confirm: "Are you sure you want to delete this comment?"}) %>
</div>
