<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <div class="errors">
            <h2><%= pluralize(@post.errors.count, "error")%> prevented this post from being saved:</h2>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li> <%= msg %> </li>
                <% end %>
            </ul> 
        </div>
    <% end%>

    <%=f.label "Title"%><br />
    <%=f.text_field :title%><br />
    <%=f.label "Author"%><br />
    <%=f.text_field :author%><br />

    <br />
    <%=f.label "Body"%><br />
    <%=f.text_area :body%><br />
    <br />
    <%=f.submit "Save post", class: "create-post-button"%>
<%end%>

