<div id="new_post_wrapper">
<h1>New post</h1>
<%= form_for @post do |f| %>
    <% if @post.errors.any? %>
        <div id="errors">
            <h2><%= pluralize(@post.errors.count, "error")%> prevented this post from being saved:</h2>
            <ul>
                <% @post.errors.full_messages.each do |msg| %>
                    <li> <%= msg %> </li>
                <% end %>
            </ul> 
        </div>
    <% end%>

    <%=f.label "Title"%><br />
    <%=f.text_field :title%><br />
    <br />
    <%=f.label "Body"%><br />
    <%=f.text_area :body%><br />
    <br />
    <%=f.submit "Create post"%>
<%end%>
</div>
